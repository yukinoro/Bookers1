<body>
<div class="notice">
	<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
	
</div>
	
<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
			<% @blogs.each do |blog| %>
		<tr>
			<td class="blog-text-headline"><%= blog.title %></td>
			<td class="blog-text"><%= blog.body %></td>
			<td>
				<%= link_to "show", blog_path(blog),class:"show_#{blog.id}" %>
			</td>
			<td>
				<%= link_to "Edit", edit_blog_path(blog),class:"edit_#{blog.id}" %>
			</td>
			<td>
				<%= link_to "Destroy", blog_path(blog.id), method: :delete,class:"destroy_#{blog.id}" %>
			</td>
				
		</tr>
			<% end %>
	</tbody>
</table>
<!-- form_for部分 -->
<%= form_for(@blog) do |f| %>
    <h1>New book</h1>
 
    <h4>Title</h4>
    <%= f.text_field :title, class:"book_title" %>
 
    <h4>Body</h4>
    <%= f.text_area :body,class:"book_body" %>
 
    <p><%= f.submit 'Create Book' %></p>
 
<% end %>
</body>
	
