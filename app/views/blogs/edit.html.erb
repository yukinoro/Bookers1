<h1>Editing Book</h1>
<!-- form_for部分 -->
<%= form_for(@blog) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <p><%= f.submit 'Update Book' %></p>
    <p><%= link_to "show", blog_path(@blog) %>
	<a>|</a>
	<%= link_to "back", blogs_path(@blog), class:"back" %></p>
<% end %>